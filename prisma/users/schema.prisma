generator usersClient {
  provider = "prisma-client-js"
  output   = "../../src/lib/prisma/users/__generated__"
}

datasource db {
  provider = "sqlite"
  url      = env("PRISMA_USERS_URL")
}

// Add your models here
model User {
  ownerId String @id
  email String @unique
  ssoGuid String @unique
  coreId String @unique
  isSecondaryAccount Boolean @default(false)

  @@index([email])
  @@index([ssoGuid])
  @@index([coreId])

  @@unique([ownerId, email, ssoGuid, coreId])
}

