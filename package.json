{
  "name": "couchbase-migrator",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "tsx src/main.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "prepare": "husky",
    "commitlint": "commitlint --edit",
    "prisma:generate": "rm -rf node_modules/.prisma && dotenv -e .env -- prisma generate --schema=prisma/api-users/schema.prisma && rm -rf node_modules/.prisma && dotenv -e .env -- prisma generate --schema=prisma/api-media/schema.prisma",
    "prisma:generate:clean": "rm -rf node_modules/.prisma src/lib/prisma/*/__generated__ && pnpm prisma:generate",
    "prisma:generate:users": "dotenv -e .env -- prisma generate --schema=prisma/api-users/schema.prisma",
    "prisma:generate:media": "dotenv -e .env -- prisma generate --schema=prisma/api-media/schema.prisma",
    "prisma:pull": "dotenv -e .env -- prisma db pull --schema=prisma/api-users/schema.prisma && dotenv -e .env -- prisma db pull --schema=prisma/api-media/schema.prisma",
    "prisma:pull:users": "dotenv -e .env -- prisma db pull --schema=prisma/api-users/schema.prisma",
    "prisma:pull:media": "dotenv -e .env -- prisma db pull --schema=prisma/api-media/schema.prisma",
    "prisma:migrate:users": "dotenv -e .env -- prisma migrate dev --schema=prisma/api-users/schema.prisma",
    "prisma:migrate:media": "dotenv -e .env -- prisma migrate dev --schema=prisma/api-media/schema.prisma",
    "prisma:studio:users": "dotenv -e .env -- prisma studio --schema=prisma/api-users/schema.prisma",
    "prisma:studio:media": "dotenv -e .env -- prisma studio --schema=prisma/api-media/schema.prisma"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.15.1",
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.15.0",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@prisma/client": "^6.16.1",
    "@t3-oss/env-core": "^0.13.8",
    "commander": "^14.0.0",
    "couchbase": "^3.2.7",
    "dotenv": "^17.2.2",
    "file-type": "^21.0.0",
    "prisma": "^6.16.1",
    "zod": "^4.1.5"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
