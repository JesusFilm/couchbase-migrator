# Couchbase Connection Configuration
# Copy this file to .env and update with your actual values

# Couchbase Server Configuration
COUCHBASE_CONNECTION_STRING=couchbase://localhost
COUCHBASE_USERNAME=Administrator
COUCHBASE_PASSWORD=password

# Bucket Configuration
COUCHBASE_BUCKET_NAME=default
COUCHBASE_SCOPE_NAME=_default
COUCHBASE_COLLECTION_NAME=_default

# Connection Options
COUCHBASE_CONNECTION_TIMEOUT=10000
COUCHBASE_OPERATION_TIMEOUT=5000

# SSL Configuration (set to true if using SSL)
COUCHBASE_USE_SSL=false
COUCHBASE_CERT_PATH=
COUCHBASE_KEY_PATH=
COUCHBASE_CERT_AUTH_PATH=

#Prisma Env Vars
PRISMA_API_MEDIA_URL=
PRISMA_API_USERS_URL=
PRISMA_USERS_URL=

#firebase
GOOGLE_APPLICATION_JSON=