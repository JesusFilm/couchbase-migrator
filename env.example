# Couchbase Connection Configuration
# Copy this file to .env and update with your actual values

# Couchbase Server Configuration
COUCHBASE_CONNECTION_STRING=couchbase://localhost
COUCHBASE_USERNAME=Administrator
COUCHBASE_PASSWORD=password

# Bucket Configuration
COUCHBASE_BUCKET_NAME=default

# Connection Options
COUCHBASE_CONNECTION_TIMEOUT=10000
COUCHBASE_OPERATION_TIMEOUT=5000

# SSL Configuration
# Set COUCHBASE_TRUST_STORE_PATH to enable SSL with certificate validation
# Leave empty to disable SSL
COUCHBASE_TRUST_STORE_PATH=
